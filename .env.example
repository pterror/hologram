# Discord (required)
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=
DISCORD_APP_ID=

# Default LLM model (provider:model format)
DEFAULT_MODEL=google:gemini-3-flash-preview

# LLM API Keys (at least one required)
# Google AI: https://aistudio.google.com/api-keys
GOOGLE_API_KEY=

# Anthropic (optional): https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI (optional): https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# Image Generation (optional - pick one host)
# =============================================================================

# RunComfy (legacy API): https://www.runcomfy.com/
RUNCOMFY_API_KEY=

# RunComfy Serverless: https://www.runcomfy.com/
RUNCOMFY_SERVERLESS_API_KEY=
RUNCOMFY_SERVERLESS_DEPLOYMENT_ID=
# Maps variable names to node paths (JSON), e.g.:
# {"prompt":"2.inputs.text","negative_prompt":"3.inputs.text","width":"4.inputs.width","height":"4.inputs.height","seed":"5.inputs.seed"}
RUNCOMFY_SERVERLESS_OVERRIDE_MAPPING=

# SaladCloud: https://salad.com/
SALADCLOUD_API_KEY=
SALADCLOUD_ORG_NAME=

# RunPod: https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=
RUNPOD_COMFY_ENDPOINT_ID=

# Self-hosted ComfyUI (e.g., http://localhost:8188)
COMFYUI_ENDPOINT=

# =============================================================================
# Image Storage (optional - for persistent URLs)
# =============================================================================

# S3-Compatible Storage (Cloudflare R2, AWS S3, MinIO, etc.)
# Cloudflare R2: https://dash.cloudflare.com/ â†’ R2
S3_ENDPOINT=
S3_BUCKET=
S3_REGION=auto
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_URL=
